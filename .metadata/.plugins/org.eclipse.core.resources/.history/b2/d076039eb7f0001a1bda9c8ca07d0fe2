package algorithm;

public class Katalk_1 {

	
	
	public int solution(String s) {
		int answer = s.length();
		int tempAnswer = 0;//원본 문자열 길이
		
        for(int i = 1 ;i < s.length()/2 ;i++){//i개로 압축하기 , 최대 압축은 문자열길이의 반이다. 
            
        	tempAnswer = 0;
        	String temp = s.substring(0, i);
        	int index = 0;
        	
        	for(int j = 0; j < s.length(); j++) {
        		if(temp == s.substring(j, j+i)) {//같다.
        			index++;
        		}else {
        			if(index == 1)
        			tempAnswer = tempAnswer + index;//전에 증가한 index 더하고 
        			index = 1;
        			temp = s.substring(j, j+i);
        		}
        	}
        	
        }
	    return answer;
	}

	public static void main(String[] args) {
		Katalk_1 a  =new Katalk_1();
		System.out.println(a.solution("aabbaccc"));
	}
}
