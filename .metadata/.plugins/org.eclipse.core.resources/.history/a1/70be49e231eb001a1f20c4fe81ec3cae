package algorithm;

import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.util.Arrays;


public class Programmers_kakao1 {
	
    public int solution(String s) {
        int answer = s.length();
        int temp  = 0;//템프는 임시로 문자열의 길이를 담는다. 
        answer = s.length();//가장 최대 길이 
        
        for(int i = 2 ;i < s.length(); i++){//i 개 단위로 짜르다. 
        	temp = 0;//temp에는 aaaa -> 2a --> temp = temp+2 이런식으로 문자열의 길이를 담는다. 
        	
        	for(int j = 0 ;j+i*2 -1< s.length() ; j+ i*2) {
        		//조건부 부분 :4개의 부분이 string length 보다 적을 때  
        		//증가 부분 : 2개 검사하면 한번에 4칸 뛴다.  aaaa 이면 4칸씩 검사
        		
        		for(int k = j; k< j+i; k++) {//파트 부분 검사 aaaa 이면 aa만 검사 
        			if(s.charAt(k) == s.charAt(k+i)) {//aaaa 에서 0과 2번 같을 떄
        				temp++;
        			}else {//aaba에서 0과 2가 다를 때  temp에 4를 더한다. 
        				temp = temp* 2;
        			}
        		}
        		
        		
        	}
        	
        	if(temp < answer) {
        		answer = temp;
        	}
        }
        return answer;
    }
	public static void main(String[] args) throws Exception {
		Programmers_kakao1 a = new Programmers_kakao1();
		System.out.println(a.solution("aabbaccc"));
	}//end of main
}
