package algorithm;

import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.util.Arrays;


public class Programmers_kakao1 {
	
    public int solution(String s) {
        int answer = s.length();
        int temp = 0;
        
        for(int i = 1 ;i< s.length()/2;i++ ) {//i개로 자르기 최대가 반으로 자르기
        	//1개로 자르기
        	temp = 0;
        	for(int j = 0;j < s.length();j++) {
        		for(int k = j ;k<s.length() ; k++) {//j와 k비교
        			if(s.charAt(j) == s.charAt(k)) {///
        				temp++;
        			}else {
        				if(temp > 1) {// aaa, aa  ==> 3a, 2a로 나뉜다.
        					temp = 2;
        				}
        				
        				break;
        			}
        		}
        	}
        }
        return answer;
    }
	public static void main(String[] args) throws Exception {
		Programmers_kakao1 a = new Programmers_kakao1();
		System.out.println(a.solution("aabbaccc"));
	}//end of main
}
