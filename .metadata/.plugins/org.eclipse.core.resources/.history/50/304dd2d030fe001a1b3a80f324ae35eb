package algorithm;

import java.util.Scanner;

public class BOJ_1712 {

	public static void main(String[] args) {
		int A,B,C;
		Scanner scan = new Scanner(System.in);
		A = scan.nextInt();
		B = scan.nextInt();
		C = scan.nextInt();
		
		double x = A/(C-B);
		if(x < 0) {
			System.out.println(-1);
			return;
		}
		String st = Double.toString(x);
		for(int i =0;i < st.length();i++) {//손익분기점이 정수인 경우
			if(st.charAt(i) == '.' && i+1< st.length() && st.charAt(i+1) != '0') {
				if(st.charAt(i+1)-'0' <5)
					System.out.println(Math.round(x)+1+1);
				else if(st.charAt(i+1)-'0'>=5){
					System.out.println(Math.round(x)+1);
				}
				return;
			}
		}
		
		System.out.println( "jj " +(int)x+1);
		return;
	}
}
