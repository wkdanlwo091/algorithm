package algorithm;

import java.util.Scanner;

public class BOJ_1193 {

	public static void main(String[] args) {
		int X;
		Scanner scan = new Scanner(System.in);
		X = scan.nextInt();
		int cnt = 1;
		int num = 1;//숫자 합
		
		for(int i=1;i<= X;i++) {
			
			if(i <=num) {
				
			}else if(i > num){
				num += cnt++;
			}
			
			if(i == X) {
				//cnt의 값에서 몇번 떨어졌는지 정리
								  //지그재그 줄  + 
				System.out.println(cnt + i-(num-cnt+1) + "/"+ i-(num-cnt+1));
				num-cnt+1 ( 6 ) < 7 8 9 10 
			}
			
		}
	}
}
