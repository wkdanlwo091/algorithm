package algorithm;

import java.util.Scanner;

public class BOJ_2292 {
	
	public static void main(String[] args) {
		
		int N;
		int num= 1;
		Scanner scan = new Scanner(System.in);
		N = scan.nextInt();

		
		if(N == 1) {
			System.out.println("1");
			return;
		}
		
		for(int i = 1;i <=N;i++) {
			if(i <=6*num + 1) {
				System.out.println(i+1);
				break;
			}else if(i == 6*num+1){
				
			}
		}
	}
}
