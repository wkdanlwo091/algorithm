package algorithm;

import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.util.Arrays;


public class Programmers_kakao1 {
	
    public int solution(String s) {
        int answer = s.length();
        int temp = 0;
        
        for(int i = 1 ;i< s.length()/2;i++ ) {//i개로 자르기 최대가 반으로 자르기
        	//1개로 자르기
        	temp = 0;
        	for(int j = 0;j < s.length();j++) {
        		int temp2 = 0;
        		for(int k = j ;k<s.length() ; k++) {//j와 k비교
        			if(s.charAt(j) == s.charAt(k)) {///aaa
        				temp2++;
        			}else {///aaab에서 b에 왔을 때 
        				if(temp2 > 1) {// aaa, aa  ==> 3a, 2a로 나뉜다.
        					temp2 = 2;
        				}
        				temp = temp + temp2;
        				j = k-1;//aaab에서 b부터 다시시작
        				break;
        			}
        		}
        		System.out.println(i +temp);
        	}
        }
        return answer;
    }
	public static void main(String[] args) throws Exception {
		Programmers_kakao1 a = new Programmers_kakao1();
		System.out.println(a.solution("aabbaccc"));
	}//end of main
}
