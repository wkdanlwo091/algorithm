package algorithm;

import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.util.Arrays;


public class Programmers_kakao1 {
	
    public int solution(String s) {
        int answer = s.length();
        int temp = 0;
        
        for(int i = 1 ;i< s.length()/2;i++ ) {//i개로 자르기 최대가 반으로 자르기
        	temp = 0;
        	
        	for(int j = 0;j < s.length();j = j + i+i) { 
        		
        		for(int k = j ; k < s.length(); k = k+i) {//덩어리 비교 i 1이고 ccc면 c가 계속 나올 때까지  i 2이고 aaaaaa이면 equals로 같을 때까지 
        			
        			if(s.substring(k, k+i).equals(s.substring(k+i, k+i+i))) {
        				
        			}
        			
        		}
        		
        	}
        	if(temp < answer) {
        		
        		answer = temp;
        		System.out.println(temp);
        		
        	}
        	
        }
        return answer;
    }
    
	public static void main(String[] args) throws Exception {
		Programmers_kakao1 a = new Programmers_kakao1();
		System.out.println(a.solution("aabbaccc"));
	}//end of main
}
