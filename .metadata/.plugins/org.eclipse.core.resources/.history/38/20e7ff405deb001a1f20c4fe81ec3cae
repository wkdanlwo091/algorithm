package algorithm;

import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.util.Arrays;


public class Programmers_kakao1 {
	
    public int solution(String s) {
        int answer = s.length();
        int temp = 0;
        
        for(int i = 1 ;i< s.length()/2;i++ ) {//i개로 자르기 최대가 반으로 자르기
        	temp = 0;
        	
        	for(int j = 0;j < s.length();j = j + i+i) { 
        		
        		for(int k = j+i ; k < s.length(); k = k+i) {//덩어리 비교 i 1이고 ccc면 c가 계속 나올 때까지  i 2이고 aaaaaa이면 equals로 같을 때까지 
        			if(k+i+i <= s.length() && k+i <=s.length()) {//substr의 두번째 파라미터는 제외니까 =을 붙임 
            			if(s.substring(j, j+i).equals(s.substring(k+i, k+i+i))) {//aa인경우 , (aa)(aa)인경우  2aa
            				temp = temp + i+1;
            			}else {//ab인경우 
            				temp = temp + 2;
            				break;
            			}
        			}else {//인덱스 넘어가서 비교가 불가한 경우
        				
        			}
        		}
        		
        	}
        	if(temp < answer) {
        		
        		answer = temp;
        		System.out.println(temp);
        		
        	}
        	
        }
        return answer;
    }
    
	public static void main(String[] args) throws Exception {
		Programmers_kakao1 a = new Programmers_kakao1();
		System.out.println(a.solution("aabbaccc"));
	}//end of main
}
